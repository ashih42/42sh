#ifndef FT_42SH_H
# define FT_42SH_H

# include "libft.h"

# define HASHMAP_SIZE	512
#define BUFFER_SIZE 4096

# define WHITESPACE " \t\n\v\r\f"

/*
**	This will be the data structure that stores our environment variables
**	Maybe other stuff too?
*/

typedef struct			s_hash_node
{
	char				*key;
	char				*val;
	struct s_hash_node	*next;
}						t_hash_node;

typedef struct			s_env
{
	
	t_hash_node			env_hashmap[HASHMAP_SIZE];


	char buffer[BUFFER_SIZE + 1];
	int pos;


}						t_env;	

/*
**	main.c
*/

void			sh_loop(t_env *env);

/*
**	env.c
*/

void			init_sh(char **envp);

/*
**	listen.c
*/

void			sh_listen(t_env *env);

/*
**	parse.c
*/

void			sh_parse(t_env *env);

/*
**	dispatcher.c
*/

void			sh_dispatcher(t_env *env);

#endif
